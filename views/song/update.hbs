{{>header}}
{{>menu}}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Submit</h3>
      {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
      {{/if}}
      <form role="form" action="submit" method="post">
        <div class="form-group">
          <label for="exampleInputMediaURL">Media URL</label>
          <input type="text" class="form-control" name="url" id="exampleInputMediaURL" placeholder="Enter media's URL (soundcloud, youtube, deezer)" value="{{song.media.source}}">
        </div>
        <div class="form-group">
          <label for="exampleInputArtist">Artist</label>
          <select name="artist" class="form-control" id="exampleInputArtist" placeholder="Artist">
              <option value="{{song.artist._id}}">{{song.artist.name}}</option>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleInputArtist">Title</label>
          <input name="title" type="text" class="form-control" id="exampleInputTitle" placeholder="Title" value="{{song.title}}">
        </div>
        <div class="form-group">
          <label for="exampleInputArtist">Album</label>
          <input name="album" type="text" class="form-control" id="exampleInputAlbum" placeholder="Album" value="{{song.album}}">
        </div>
        <div class="form-group">
          <label for="exampleInputProducer">Producer</label>
          <select name="producer" class="form-control" id="exampleInputProducer" placeholder="Producer">
              <option value="{{song.artist._id}}">{{song.producer.name}}</option>
          </select>
        </div>
        <button type="submit" class="btn btn-default">Update Song</button>
      </form>
    </div>
  </div>
</div>
{{>footer}}
