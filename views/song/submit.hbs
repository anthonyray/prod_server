{{>header}}
{{>menu}}
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h3>Submit</h3>
      {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
      {{/if}}
      <form role="form" action="submit" method="post">
      <fieldset>
        <div class="radio">
          <label>
            <input type="radio" name="source" id="optionsRadios1" value="soundcloud"> Soundcloud
          </label>
        </div>
        <div class="radio">
          <label>
            <input type="radio" name="source" id="optionsRadios1" value="youtube"> Youtube
          </label>
        </div>        
      </fieldset>
      <fieldset>
        <div class="form-group">
          <label for="exampleInputMediaURL">Media URL</label>
          <input type="text" class="form-control" name="url" id="exampleInputMediaURL" placeholder="Enter media's URL (soundcloud, youtube, deezer)">
        </div>
        <button type="button" class="btn btn-default" id="fetch">Next</button>
      </fieldset>
      <div class="loadingMessage">
      <br>
        <i class="text-center">Retrieving information ... Please wait. </i>
      <br>
      </div>
      <fieldset>
        <div class="form-group">
          <label for="exampleInputArtist">Artist</label>
          <select name="artist" class="form-control" id="exampleInputArtist" placeholder="Artist">
            <option value=""></option>
            {{#artists}}
              <option value="{{_id}}">{{name}}</option>
            {{/artists}}
          </select>
        </div>
        <div class="form-group">
          <label for="exampleInputArtistName">Artist</label>
          <input type="text" class="form-control" name="artistname" id="exampleInputArtistName" placeholder="Enter Artist's name">
        </div>
        <div class="form-group">
          <label for="exampleInputArtist">Title</label>
          <input name="title" type="text" class="form-control" id="exampleInputTitle" placeholder="Title">
        </div>
        <div class="form-group">
          <label for="exampleInputArtist">Album</label>
          <input name="album" type="text" class="form-control" id="exampleInputAlbum" placeholder="Album">
        </div>
        <div class="form-group">
          <label for="exampleInputProducer">Producer</label>
          <select name="producer" class="form-control" id="exampleInputProducer" placeholder="Producer">
            {{#artists}}
              <option value="{{_id}}">{{name}}</option>
            {{/artists}}
          </select>
        </div>
        <button type="submit" class="btn btn-default">Create Song</button>
      </fieldset>
      </form>
    </div>
  </div>
</div>


{{>scripts}}
<script src="http://connect.soundcloud.com/sdk.js"></script>
<script src="/src/submit/submit.js"></script>
{{>footer}}
