{{>header}}
{{>menu}}
  <div class="fluid-container">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center">
          <h1> Browse by songs </h1>
          <h4 class="text-muted"> Cant' find the song you want ? <a href="song/submit">Submit it !</a></h4>
        </div>
        <br>
        <br>
        <nav>
          <ul class="nav nav-pills nav-justified">
            <li class="active"><a href="#">Best</a></li>
            <li><a href="#">Trending</a></li>
            <li><a href="#">Most Discussed</a></li>
          </ul>
        </nav>
        <br>
        <br>
        {{# songs}}
        <div class="media">
          <a class="media-left pull-left" href="#">
            <img class="img img-circle" src="images/placeholder.gif">
          </a>
          <div class="media-body">
            <h4 class="media-heading"><a href="song/{{_id}}"> {{title}} - {{artist.name}}</a></h4>
            <p>Produced by {{producer.name}}</p>

          </div>
        </div>
        <br>

        {{/songs}}
      </div>
    </div>
  </div>
{{>footer}}
